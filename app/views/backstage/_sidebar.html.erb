      <img src="https://raw.githubusercontent.com/stuyy/dashboard-ui-grids/master/speedometer.svg" width="40px" alt="logo" />
      <h1>Backstage 
          <%= link_to root_path, class:"btn btn-primary", style: "color: white", target: "_blank" do %>
            <i class="fas fa-theater-masks"></i> Center Stage
          <% end %>
      </h1>
    </section>
    <section class="links-container">
      <div class="links">
        <div class="icon">
          <i class="fas fa-house-user"></i>
