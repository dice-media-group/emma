          <i class="far fa-newspaper"></i>
        </div>
        <span>
          <%= link_to 'blog hub', backstage_blog_hub_index_path %>
        </span>
      </div>
      <div class="links">
        <div class="icon">
          <i class="fas fa-book"></i>
        </div>
        <span>
          <%= link_to 'books', backstage_books_path %>          
        </span>
      </div>
      <div class="links">
        <div class="icon">
          <i class="fas fa-calendar-check"></i>
        </div>
        <span>
