
<section class="ct-billboard-wrapper ct-post-feature">
            <article class="ct-billboard">
                <div class="ct-billboard-poster" style="opacity: 1;">
                    <% if entry.image.present? %>
                        <%= image_tag entry.image %>
                    <% else %>
                        <%= image_tag "https://via.placeholder.com/1400x1120" %>
                      
                    <% end %>
                </div>
                <div class="ct-billboard-postwrap">
                    <div class="ct-post-container container">
                        <%= render partial: '/blog/article_sharing_bar', locals: { entry: entry } %>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <h1 class="ct-ctrl-title ct-liner-simple ct-post-title">
                                    <%= link_to entry.title, entry %>
                                </h1>
                            </div>
                            <div class="col-sm-6 text-left">
                                <h5 class="ct-h-slab ct-post-date">
                                    <%= time_ago_in_words(entry.created_at) %> ago                                    <span class="middot">Â·</span>
                                    <%= entry.article.reading_time || 1 %> min read                                </h5>

                                    <% entry_body_intro = !entry.article.blank? ? strip_tags(entry.article.body.to_s).truncate(270) : "no article attached" %>
                                    <p><%= entry_body_intro  %></p>
                                <div class="text-right">
                                    <%= link_to entry, class: "ct-post-permalink link-blue" do %>
                                        Read More &gt;&gt;
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </section>